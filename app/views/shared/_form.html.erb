
<div class="container d-flex justify-content-center">
  <%= form_with model: @contact, url: contacts_path, method: :post  do |form| %>
    <div class="form-control">
      <%= form.label :name, "Nom" %>
      <%= form.text_field :name %>
    </div>
    <div class="form-control">
      <%= form.label :email, "Email" %>
      <%= form.text_field :email %>
    </div>
    <div class="form-control">
      <%= form.label :phone, "Téléphone" %>
      <%= form.text_field :phone %>
    </div>
    <div class="form-control">
      <%= form.label :project, "Type de projet" %>
      <%= form.select :project, options_for_select(Contact.projects.keys, 0), {}, {class: "form-control"} %>
    </div>
    <div class="form-control">
      <%= form.label :message, "Détails" %>
      <%= form.text_area :message %>
    </div>

    <%= form.submit%>
  <% end %>
</div>
